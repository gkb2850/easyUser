.container .chartImg_box {
  height: 296rpx;
  background: #fff;
  position: relative;
}

.container .chartImg_box .bg_img {
  height: 284rpx;
  width: 100%;
  display: block;
}

.container .chartImg_box .chartPic_box {
  position: absolute;
  left: 50%;
  top: 24rpx;
  width: 694rpx;
  height: 272rpx;
  transform: translateX(-50%);
  border-radius: 10rpx;
  overflow: hidden;
}

.container .chartImg_box .chartPic_box .swiperbox {
  height: 100%;
  width: 100%;
}

.container .chartImg_box .chartPic_box .swiperbox .swiperItem {
  height: 100%;
  width: 100%;
}

.container .chartImg_box .chartPic_box .swiperbox .swiperItem image {
  height: 100%;
  width: 100%;
  display: block;
}

.container .main_box {
  padding:  0 28rpx;
  box-sizing: border-box;
  margin-top: 34rpx;
}

.container .main_box .running_info_box {
  box-shadow:0px 2rpx 26rpx 0px rgba(0, 0, 0, 0.1);
  border-radius:10rpx;
  padding:  50rpx 32rpx;
  box-sizing: border-box;
}

.container .main_box .running_info_box .title_txt {
  height: 38rpx;
  line-height: 38rpx;
  font-size:40rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}

.container .main_box .running_info_box .main_cont .term_box {
  margin-top: 48rpx;
}

.container .main_box .running_info_box .main_cont .term_box .tt_txt {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .main_box .running_info_box .main_cont .term_box .bot_box {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.container .main_box .running_info_box .main_cont .term_box .bots_box {
  display: block;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .address_icon {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .time_icon {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .c_txt {
  flex: 1;
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  overflow: hidden;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .right_iocn {
  height: 20rpx;
  width: 20rpx;
  margin-left: 16rpx;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .first_box {
  width: 100%;
  display: flex;
  align-items: center;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .second_box {
  display: flex;
  align-items: center;
  margin-top: 48rpx;
}

.container .main_box .running_info_box .main_cont .term_box .bot_box .second_box .or_txt {
  height: 24rpx;
  line-height: 24rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin: 0 50rpx;
}

.container .main_box .running_info_box .main_cont .terms_box {
  display: flex;
  align-items: center;
}

.container .main_box .running_info_box .main_cont .terms_box .tt_txt {
  margin-right: 40rpx;
}

.container .main_box .running_info_box .main_cont .terms_box .bot_box {
  margin-top: 0;
}

.container .main_box .running_info_box .main_cont .term_box .pic_add {
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
}

.container .main_box .run_bot_btn {
  height: 88rpx;
  margin: 120rpx 0 104rpx;
  padding: 0 64rpx;
  box-sizing: border-box;
}

.container .main_box .run_bot_btn view {
  height: 100%;
  line-height: 88rpx;
  background: #31CC90;
  text-align: center;
  border-radius: 44rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}








