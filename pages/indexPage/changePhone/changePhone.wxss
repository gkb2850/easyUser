.container {
  padding: 0 64rpx;
  box-sizing: border-box;
}

.container .title_top {
  height: 34rpx;
  text-align: center;
  margin-top: 80rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
  margin-bottom: 20rpx;
}

.container .cont_box .item_box {
  display: flex;
  border-bottom: 2rpx solid #EEEEEE;
  height: 114rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  align-items: flex-end;
}

.container .cont_box .item_box .l_img {
  height: 36rpx;
  width: 36rpx;
  display: block;
  margin-bottom: 19rpx;
  margin-right: 16rpx;
}

.container .cont_box .item_box .sel_phone_change {
  margin-bottom: 24rpx;
}

.container .cont_box .item_box input {
  height: 40rpx;
  flex: 1;
  line-height: 40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(204,204,204,1);
  margin-bottom: 10rpx;
}

.container .cont_box .item_box .inputplace {
  line-height: 40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(204,204,204,1);
}

.container .cont_box .item_box .yz_btn {
  width: 148rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 4rpx;
  background: #31CC90;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin-bottom:24rpx;
  text-align: center;
}

.container .bot_submit {
  margin: 120rpx 0;
  background: #31CC90;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  text-align: center;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}