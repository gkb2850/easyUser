page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.containers {
  display: block;
  height: auto;
}

.container .title_box {
  border-bottom: 2rpx solid #DDDDDD;
  height: 80rpx;
  display: flex;
  justify-content: center;
}

.container .title_box .item_nav {
  width: 35%;
  height: 100%;
  position: relative;
}

.container .title_box .item_nav .txt {
  height: 100%;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  text-align: center;
}

.container .title_box .item_nav .txt.active {
  color: #31CC90;
  font-weight:bold;
}

.container .title_box .item_nav .line {
  width: 60rpx;
  height: 2rpx;
  position: absolute;
  left: 50%;
  bottom:0;
  transform: translateX(-50%);
  background: #31CC90;
}

.container .cont_box {
  padding: 28rpx;
  box-sizing: border-box;
  flex: 1;
}

.container .cont_box .settxtbox {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.container .cont_box .item_box {
  width: 23%;
  height: 80rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 28rpx;
}

.container .cont_box .item_box>view {
  height: 100%;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:#333333;
  background: #EEEEEE;
  text-align: center;
}

.container .cont_box .item_box>view.active {
  color: #fff;
  background: #31CC90;
}

.container .cont_box .item_box>image {
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  border-radius: 14rpx;
}

.container .bot_box {
  height: 120rpx;
  padding: 20rpx 28rpx;
  box-sizing: border-box;
  box-shadow:0px -12px 24px 0px rgba(0, 0, 0, 0.04);
}

.container .bot_box>view {
  width: 100%;
  height: 100%;
  background: #31CC90;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  border-radius: 40rpx;
}

.container .food_box {
  padding: 28rpx;
  box-sizing: border-box;
}


