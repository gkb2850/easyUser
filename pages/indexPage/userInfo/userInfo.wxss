page {
  background: #F2F4F8;
}

.container .user_top {
  margin-bottom: 24rpx;
  background: #fff;
  overflow: hidden;
}

.container .user_top .user_img>image {
  height: 100rpx;
  width: 100rpx;
  display: block;
  margin: 40rpx auto 28rpx;
  border-radius: 6rpx;
}

.container .user_top .user_img>view {
  height: 38rpx;
  line-height: 38rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
  width: 100%;
  text-align: center;
}

.container .user_top .user_info {
  padding: 28rpx 0;
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}

.container .user_top .user_info>view {
  width: 40%;
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  text-align: center;
}

.container .user_cont {
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.container .user_cont .item_box {
  height: 100rpx;
  border-bottom: 2rpx solid #EEEEEE;
  box-sizing: border-box;
  display: flex;
}

.container .user_cont .item_box:last-child {
  border: none;
}

.container .user_cont .item_box .left {
  flex: 1;
  display: flex;
  height: 100%;
}

.container .user_cont .item_box .left>image {
  height: 40rpx;
  width: 40rpx;
  display: block;
  margin: 30rpx 0;
}

.container .user_cont .item_box .left>view {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin: 37rpx 0 37rpx 20rpx;
}

.container .user_cont .item_box .right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.container .user_cont .item_box .right>image {
  height: 40rpx;
  width: 40rpx;
  margin: 30rpx 0;
}

.container .user_cont .item_box .right>view {
  height: 20rpx;
  line-height: 20rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  margin: 40rpx 4rpx 40rpx 0;
}

.container .user_bot {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #31CC90;
  box-sizing: border-box;
  border-radius: 40rpx;
  width: 440rpx;
  margin: 100rpx auto;
  text-align: center;
  color: #31CC90;
}