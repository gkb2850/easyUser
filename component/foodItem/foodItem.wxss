.container .item_box {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  width: 334rpx;
  box-shadow:0px 2rpx 12rpx 0px rgba(153,153,153,0.6);
  margin-bottom: 28rpx;
}

.container .item_box>image {
  width: 334rpx;
  height: 244rpx;
  display: block;
}

.container .item_box .name_txt {
  margin: 24rpx 0 19rpx 0;
  padding: 0 16rpx;
  box-sizing: border-box;
  line-height: 30rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.container .item_box .score_txt {
  height: 20rpx;
  line-height: 20rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,51,51,1);
}

.container .item_box .bot_txt {
  height: 20rpx;
  line-height: 20rpx;
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  padding: 0 16rpx;
  box-sizing: border-box;
  margin: 9rpx 0 28rpx 0;
}
