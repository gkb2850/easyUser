}

.container .message_box_r .user_top .r_box {
  flex: 1;
  overflow: hidden;
}

.container .message_box_r .user_top .r_box .name {
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 14rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
  text-align: right;
}

.container .message_box_r .user_top .r_box .time {
  height: 20rpx;
  line-height: 20rpx;
  margin-top: 14rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  text-align: right;
}

