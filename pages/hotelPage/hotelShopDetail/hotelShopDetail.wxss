  height: 20rpx;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.container .header_box .header_txtbox .shop_txt .txt {
  height: 20rpx;
  line-height: 20rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .header_box .header_txtbox .shop_txt .line {
  width: 2rpx;
  height: 12rpx;
  background: #DDDDDD;
  margin: 0 10rpx;
}

.container .header_box .header_txtbox .label_box {
  height: 28rpx;
  display: flex;
  margin-top: 16rpx;
}

.container .header_box .header_txtbox .label_box .l_box {
  padding: 0 10rpx;
  border: 2rpx solid #FF3333;
  height: 28rpx;
  box-sizing: border-box;
  line-height: 24rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,51,51,1);
  border-radius: 4rpx;
  margin-right: 10rpx;
}




