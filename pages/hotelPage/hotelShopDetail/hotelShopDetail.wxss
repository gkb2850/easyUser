.container {
  padding-bottom: 120rpx;
}

.container .header_box .img_box {
  height: 340rpx;
  position: relative;
}

.container .header_box .img_box .headerImg {
  height: 100%;
  width: 100%;
  display: block;
}

.container .header_box .img_box .btn_box {
  position: absolute;
  right: 16rpx;
  bottom: -44rpx;
  width: 180rpx;
  display: flex;
  height: 88rpx;
  justify-content: space-between;
}

.container .header_box .img_box .btn_box image {
  height: 88rpx;
  width: 88rpx;
}

.container .header_box .header_txtbox {
  display: flex;
  height: auto;
  padding:  0 28rpx 38rpx 28rpx;
  box-sizing: border-box;
  box-shadow:0px 2rpx 26rpx 0px rgba(0, 0, 0, 0.1);
}

.container .header_box .header_txtbox .money_box {
  flex: 1;
}

.container .header_box .header_txtbox .money_box .money_txt {
  height: 36rpx;
  margin-top: 30rpx;
  display: flex;
}

.container .header_box .header_txtbox .money_box .money_txt>view:nth-child(1) {
  height: 36rpx;
  line-height: 36rpx;
  font-size:48rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,51,51,1);
  margin-right: 20rpx;
}

.container .header_box .header_txtbox .money_box .money_txt>view:nth-child(2) {
  height: 20rpx;
  line-height: 20rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  text-decoration:line-through;
  color:rgba(153,153,153,1);
  margin-top: 16rpx;
}

.container .header_box .header_txtbox .money_box .num {
  height: 20rpx;
  line-height: 20rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  margin-top: 16rpx;
}

.container .header_box .header_txtbox .score_box {
  height: 20rpx;
  display: flex;
  margin-top: 16rpx;
}

.container .header_box .header_txtbox .score_box .l_box {
  display: inline-flex;
  height: 100%;
  align-items: center;
}

.container .header_box .header_txtbox .score_box .l_box image {
  height: 18rpx;
  width: 18rpx;
  margin-right: 8rpx;
}

.container .header_box .header_txtbox .score_box .l_box view {
  height: 20rpx;
  line-height: 20rpx;
  margin-left: 10rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .header_box .header_txtbox .score_box .c_box {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
