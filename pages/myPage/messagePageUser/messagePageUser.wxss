page {
  background: #F2F4F8;
}

.container {
  background: #fff;
}

.container .nav_top {
  height: 80rpx;
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #EEEEEE;
}

.container .nav_top .item_box {
  height: 100%;
  width: 200rpx;
  position: relative;
}

.container .nav_top .item_box .txt {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .nav_top .item_box .txt.active {
  font-weight:bold;
  color:rgba(49,204,144,1);
}

.container .nav_top .item_box .line {
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 4rpx;
  width: 60rpx;
  background: #31CC90;
  transform: translateX(-50%);
}

.container .main_cont .shop_box {
  padding: 22rpx 28rpx;
  box-sizing: border-box;
}

.container .main_cont .shop_box .item_shopMessage {
  display: flex;
}

.container .main_cont .shop_box .item_shopMessage .l_img {
  height: 96rpx;
  width: 96rpx;
  border-radius: 50%;
  margin-right: 28rpx;
}

.container .main_cont .shop_box .item_shopMessage .r_box {
  flex: 1;
  border-bottom: 2rpx solid #EEEEEE;
}

.container .main_cont .shop_box .item_shopMessage:last-child .r_box {
  border: none;
}

.container .main_cont .shop_box .item_shopMessage .r_box .top_txt {
  height: 30rpx;
  display: flex;
  margin-top: 10rpx;
  justify-content: space-between;
  align-items: center;
}

.container .main_cont .shop_box .item_shopMessage .r_box .top_txt .name {
  height: 30rpx;
  line-height: 30rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}

.container .main_cont .shop_box .item_shopMessage .r_box .top_txt .time {
  height: 20rpx;
  line-height: 20rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .main_cont .shop_box .item_shopMessage .r_box .last_message {
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}








