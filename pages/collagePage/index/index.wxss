.container .search_box {
  height: 88rpx;
  background: #31CC90;
  padding: 0 28rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
}

.container .search_box .txt_box {
  height: 100%;
  line-height: 88rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
}

.container .search_box .searchinset_box {
  flex: 1;
  height: 64rpx;
  margin: 12rpx 28rpx;
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.container .search_box .searchinset_box .search_img {
 height: 28rpx;
 width: 28rpx;
 display: block;
 margin: 18rpx 12rpx 18rpx 0;
}

.container .search_box .searchinset_box>input {
  height: 100%;
  line-height: 64rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  flex: 1;
}

.container .search_box .searchinset_box .inputplace {
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  height: 100%;
  line-height: 64rpx;
}

.container .search_box .searchinset_box .voice_icon {
  height: 32rpx;
  width: 32rpx;
  display: block;
  margin: 16rpx 0;
}

.container .chartImg_box {
  height: 296rpx;
  background: #fff;
  position: relative;
}

.container .chartImg_box .bg_img {
  height: 284rpx;
  width: 100%;
  display: block;
}

.container .chartImg_box .chartPic_box {
  position: absolute;
  left: 50%;
  top: 24rpx;
  width: 694rpx;
  height: 272rpx;
  transform: translateX(-50%);
  border-radius: 10rpx;
  overflow: hidden;
}

.container .chartImg_box .chartPic_box .swiperbox {
  height: 100%;
  width: 100%;
}

.container .chartImg_box .chartPic_box .swiperbox .swiperItem {
  height: 100%;
  width: 100%;
}

.container .chartImg_box .chartPic_box .swiperbox .swiperItem image {
  height: 100%;
  width: 100%;
  display: block;
}

.container .select_box {
  margin-top: 43rpx;
}

.container .select_box .title_box {
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  height: 31rpx;
}

.container .select_box .title_box .first_txt {
  height: 100%;
  line-height: 31rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
  margin-right: 32rpx;
}

.container .select_box .order_box {
  padding:  28rpx 0 0 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.container .select_box .order_box .orderall {
  display: inline-flex;
}

.container .select_box .order_box .orderall .order_itme {
  margin-right: 16rpx;
  overflow: hidden;
  width: 184rpx;
  height: 247rpx;
}

.container .select_box .order_box .orderall .order_itme>image {
  height: 184rpx;
  width: 184rpx;
  display: block;
  margin-bottom: 15rpx;
}

.container .select_box .order_box .orderall .order_itme>view {
  line-height: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .noticeImg_box {
  padding: 43rpx 24rpx 0 24rpx;
  box-sizing: border-box;
}


