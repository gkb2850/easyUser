.container {
  height: 100%;
  width: 100%;
}

.container .message_btn {
  position: relative;
  width: 100%;
  height: 100%;
}

.container .message_btn .mask_box {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -100%);
  margin-top: -32rpx;
  width: 360rpx;
  z-index: 30;
}

.container .message_btn .mask_bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 20;
  background: transparent;
}

.container .message_btn .mask_box .mask_cont_box {
  background: #fff;
  box-shadow:0px 10rpx 16rpx 0px rgba(117,117,117,0.1);
  border-radius:10rpx;
  position: relative;
  z-index: 30;
}

.container .message_btn .mask_box .mask_cont_box .item_txt {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.container .message_btn .mask_box .mask_cont_box .item_txt>view {
  flex: 1;
  height: 28rpx;
  line-height: 28rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
}

.container .message_btn .mask_box .mask_cont_box .item_txt>image {
  height: 32rpx;
  width: 32rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
}

.container .message_btn .mask_box .mask_cont_box .bot_btn {
  border-top: 2rpx solid #EEEEEE;
  display: flex;
  height: 80rpx;
}

.container .message_btn .mask_box .mask_cont_box .bot_btn>view {
  height: 80rpx;
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(49,204,144,1);
}

