.container .search_box {
  background: #31CC90;
  height: 88rpx;
  padding: 12rpx 28rpx;
  box-sizing: border-box;
}

.container .search_box .search_box_in {
  height: 100%;
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.container .search_box .search_box_in .left_f {
  display: inline-flex;
  height: 100%;
}

.container .search_box .search_box_in .left_f .txt {
  height: 26rpx;
  line-height: 26rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin: 19rpx 0 20rpx 0;
}

.container .search_box .search_box_in .left_f>image {
  height: 16rpx;
  width: 16rpx;
  display: block;
  margin: 24rpx 24rpx 24rpx 12rpx;
}

.container .search_box .search_box_in .left_f .line {
  width: 2rpx;
  height: 20rpx;
  margin: 22rpx 0;
  background: #999999;
}

.container .search_box .search_box_in .cont_c {
  height: 100%;
  flex: 1;
  display: flex;
}

.container .search_box .search_box_in .cont_c image {
  height: 28rpx;
  width: 28rpx;
  margin: 18rpx 12rpx 18rpx 24rpx;
}

.container .search_box .search_box_in .cont_c input {
  height: 100%;
  line-height:64rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  flex: 1;
}

.container .search_box .search_box_in .cont_c .inputplace {
  height: 100%;
  line-height:64rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  flex: 1;
}

.container .search_box .search_box_in .right_t {
  height: 100%;
  display: inline-flex;
}

.container .search_box .search_box_in .right_t .vioce_iocn {
  height: 32rpx;
  width: 32rpx;
  border-top: 16rpx solid transparent;
  border-right: 24rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  display: block;
}

.container .search_box .search_box_in .right_t .line {
  height: 20rpx;
  width: 2rpx;
  background: #31CC90;
  margin: 22rpx 0;
}

.container .search_box .search_box_in .right_t .srarch_btn {
  height: 26rpx;
  line-height: 26rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(49,204,144,1);
  padding-left: 24rpx;
  border-top: 20rpx solid transparent;
  border-bottom: 18rpx solid transparent;
}
