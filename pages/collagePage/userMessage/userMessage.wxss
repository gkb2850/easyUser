.container .message_box {
  padding: 40rpx 28rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #EEEEEE;
}

.container .message_box .top_box {
  display: flex;
  align-items: center;
  height: 76rpx;
}

.container .message_box .top_box .user_img {
  height: 76rpx;
  width: 76rpx;
  margin-right: 16rpx;
}

.container .message_box .top_box .user_info {
  flex: 1;
}

.container .message_box .top_box .user_info .name {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}

.container .message_box .top_box .user_info .time {
  margin-top: 12rpx;
  height: 16rpx;
  line-height: 16rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.container .message_box .top_box .num_f {
  height: 24rpx;
  line-height: 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-left: 16rpx;
}

.container .message_box .cont_box {
  padding-left: 92rpx;
}

.container .message_box .cont_box .ly_message {
  line-height: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .message_box .cont_box .ly_imgbox {
  margin: 16rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.container .message_box .cont_box .ly_imgbox .img_box {
  width: 25%;
  display: flex;
}

.container .message_box .cont_box .ly_imgbox .img_box image {
  margin-right: 12rpx;
  height: 88rpx;
  flex: 1;
  border-radius: 4rpx;
}

.container .message_box .cont_box .bot_txtbox {
  display: flex;
}

.container .message_box .cont_box .bot_txtbox .l_txt {
  height: 24rpx;
  line-height: 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}

.container .message_box .cont_box .bot_txtbox .r_txt {
  margin-left: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 26rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  flex: 1;
}







