.container {
  padding:  0 28rpx;
  box-sizing: border-box;
}

.container .address_box {
  border-bottom: 2rpx solid #EEEEEE;
  padding: 32rpx 0;
  display: flex;
}

.container .address_box .left {
  width: 568rpx;
}

.container .address_box .left .title {
  line-height: 37rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.container .address_box .left .people {
  height: 24rpx;
  margin-top: 23rpx;
  display: flex;
}

.container .address_box .left .people>view:nth-child(1) {
  height: 100%;
  line-height: 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  margin-right: 40rpx;
}

.container .address_box .left .people>view:nth-child(2) {
  height: 20rpx;
  line-height: 20rpx;
  margin: 2rpx 0;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .address_box .right {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.container .address_box .right .editImg {
  height: 32rpx;
  width: 32rpx;
  border-top: 12rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-left: 20rpx solid transparent;
  display: block;
}

.container .address_box .right .delImg {
  height: 32rpx;
  width: 32rpx;
  border-top: 16rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 20rpx solid transparent;
  display: block;
}

.container .add_btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
  box-shadow:0px -12rpx 24rpx 0px rgba(0, 0, 0, 0.04);
  padding: 20rpx 28rpx;
  box-sizing: border-box;
}

.container .add_btn>view {
  width: 100%;
  height: 100%;
  background: #31CC90;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}