.searchBox {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  padding:  0 0 0 20rpx;
  background: #fff;
  box-sizing: border-box;
  align-items: center;
}

.searchBox .searchImg {
  height: 28rpx;
  width: 28rpx;
  display: block;
  margin: 18rpx 12rpx 18rpx 0;
}

.searchBox input {
  height: 36rpx;
  line-height: 36rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  flex: 1;
  margin: 14rpx 0;
  min-height: 0;
}

.searchBox .inputplace {
  height: 36rpx;
  line-height: 36rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  min-height: 0;
}

.searchBox .audioImg {
  height: 32rpx;
  width: 32rpx;
  border-top: 30rpx solid transparent;
  border-bottom: 30rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-left: 30rpx solid transparent;
}


 .setBox {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 32;
}

 .setBox .seting_mask_bg{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
}

 .setBox .set_cont {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  margin-left: -40%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

 .setBox .set_cont .txt {
  padding: 40rpx;
  box-sizing: border-box;
  line-height: 40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(50,57,67,1);
  border-bottom: 2rpx solid #EEEEEE;
  
}

 .setBox .set_cont .bot_btn {
  height: 80rpx;
  display: flex;
}

 .setBox .set_cont .bot_btn>view {
  height: 100%;
  line-height: 80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(152,158,167,1);
  text-align: center;
  flex: 1;
}

 .setBox .set_cont .bot_btn>view:first-child {
  border-right: 2rpx solid #EEEEEE;
  box-sizing: border-box;
}

 .setBox .set_cont .bot_btn>view:nth-child(2) {
  color: #2D82FF;
}

.vioce_mask_box {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 60%;
  transform: translate(-50%, -50%);
  overflow: hidden;
  border-radius: 10rpx;
  z-index: 60rpx;
}

.vioce_mask_box .mask_bg {
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  top: 0;
}

.vioce_mask_box .main_box {
  width: 100%;
  padding: 20rpx 30rpx;
  position: relative;
  z-index: 60rpx;
  box-sizing: border-box;
}

.vioce_mask_box .main_box .img_icon {
  height: 80rpx;
  width: 80rpx;
  margin: 0 auto;
  display: block;
}

.vioce_mask_box .main_box .txt {
  height: 40rpx;
  line-height: 40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#fff;
  margin-top: 20rpx;
  text-align: center;
}

.vioce_mask_box .main_box .txts {
  line-height: 40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#fff;
  margin-top: 8rpx;
  text-align: center;
  white-space: normal;
}


