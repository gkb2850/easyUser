.phone_box {
  height: 20rpx;
  display: inline-flex;
  position: relative;
}

.phone_box .txt {
  height: 100%;
  line-height: 20rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  flex: 1;
}

.phone_box>image {
  height: 16rpx;
  width: 16rpx;
  margin: 2rpx 20rpx 2rpx 10rpx;
  display: block;
}

.phone_box .select_box {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  background: #ccc;
  z-index: 30;
}

.phone_box .select_box .item_phone {
  height: 60rpx;
  line-height: 60rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  text-align: center;
  border-bottom: 2rpx solid #EEEEEE;
  padding: 0 20rpx;
}

.phone_box .mask_phone {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 20;
}