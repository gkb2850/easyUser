page {
  background: #F2F4F8;
}

.container {
  padding: 28rpx 28rpx 126rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.container .message_box_l {
  border: 2rpx solid rgba(221,221,221,1);
  border-radius:10rpx;
  background: #fff;
  margin-bottom: 28rpx;
  width: 580rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
}

.container .message_box_l .user_top {
  height: 88rpx;
  display: flex;
}

.container .message_box_l .user_top .user_img {
  height: 88rpx;
  width: 88rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.container .message_box_l .user_top .r_box {
  flex: 1;
  overflow: hidden;
}

.container .message_box_l .user_top .r_box .name {
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 14rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(0,0,0,1);
}

.container .message_box_l .user_top .r_box .time {
  height: 20rpx;
  line-height: 20rpx;
  margin-top: 14rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.container .message_box_l .message_txt {
  line-height: 28rpx;
  margin-top: 10rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  padding-left: 104rpx;
}


.container .message_box_r {
  border: 2rpx solid rgba(221,221,221,1);
  border-radius:10rpx;
  background: #fff;
  margin-bottom: 28rpx;
  width: 580rpx;
  padding: 24rpx 20rpx;
