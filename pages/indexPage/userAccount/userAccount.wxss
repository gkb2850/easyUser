.container {
  padding:  0 28rpx;
  box-sizing: border-box;
}

.container .item_box {
  border-bottom: 2rpx solid #EEEEEE;
  height: 118rpx;
  display: flex;
}

.container .item_box .txt {
  width: 260rpx;
  height: 100%;
  line-height: 116rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .item_box .right {
  flex: 1;
  display: flex;
  height: 100%;
  justify-content: flex-end;
  align-items: center;
}

.container .item_box .right .txts {
  height: 100%;
  line-height: 116rpx;
  flex: 1;
  text-align: right;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .item_box .right image {
  height: 20rpx;
  width: 20rpx;
  display: block;
  margin-left: 15rpx;
}