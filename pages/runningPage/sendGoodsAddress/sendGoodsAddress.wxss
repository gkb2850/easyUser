.container {
 padding: 40rpx 28rpx 0;
 box-sizing: border-box; 
}

.container .address_box {
  background: #fff;
  border-radius: 10rpx;
  box-shadow:0px 2rpx 26rpx 0px rgba(0, 0, 0, 0.1);
  padding: 50rpx 32rpx;
  box-sizing: border-box;
}

.container .address_box .item_box {
  display: flex;
  align-items: center;
  margin-top: 50rpx;
}

.container .address_box .item_box:nth-child(4) .l_txt{
  height: 48rpx;
  line-height: 48rpx;
  align-self: flex-start;
}

.container .address_box .item_box:first-child {
  margin-top: 0;
}

.container .address_box .item_box .l_txt {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  width: 176rpx;
}

.container .address_box .item_box .r_box {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.container .address_box .item_box .r_box .address_icon {
  height: 32rpx;
  width: 32rpx;
}

.container .address_box .item_box .r_box .r_txt {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .address_box .item_box .r_box .right_icon {
  height: 20rpx;
  width: 20rpx;
  margin-left: 10rpx;
}

.container .address_box .item_box .r_box input {
  flex: 1;
  height: 48rpx;
  line-height: 48rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  min-height: 0;
}

.container .address_box .item_box .r_box .inputPlace {
  line-height: 48rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.container .address_box .item_box .rs_box {
  flex: 1;
}

.container .address_box .item_box .rs_box input {
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  min-height: 0;
}

.container .address_box .item_box .rs_box .inputPlace {
  line-height: 48rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.container .address_box .item_box .rs_box .radio_box {
  display: flex;
  margin-top: 32rpx;
}

.container .address_box .item_box .rs_box .radio_box .radio radio{
  transform: scale(0.8);
  margin-right: 15rpx;
}

.container .address_box .item_box .rs_box .radio_box .radio:first-child {
  margin-right: 100rpx;
}

.container .bot_btn_box {
  width: 622rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 120rpx auto;
  background: #31CC90;
  border-radius: 44rpx;
  text-align: center;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}


