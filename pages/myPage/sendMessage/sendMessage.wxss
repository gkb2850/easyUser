  padding-right: 104rpx;
}

.container .bot_message_btn {
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 20;
  width: 100%;
  padding: 20rpx 28rpx;
  box-sizing: border-box;
  display: flex;
}

.container .bot_message_btn input {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #F2F4F8;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#999999;
  flex: 1;
  padding-left: 10rpx;
}

.container .bot_message_btn .inputPlace {
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#999999;
  line-height: 60rpx;
}

.container .bot_message_btn .ts_box {
  width: 110rpx;
  margin-left: 20rpx;
  height: 60rpx;
  border: 2rpx solid #31CC90;
  box-sizing: border-box;
  position: relative;
  border-radius: 30rpx;
}

.container .bot_message_btn .ts_box .messa_txt {
  text-align: center;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(49,204,144,1);
  line-height: 60rpx;
  height: 100%;
}

.container .bot_message_btn .ts_box .btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}


.container .bot_message_btn .submit_btn {
  margin-left: 20rpx;
  background: #31CC90;
  text-align: center;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 110rpx;
}

