.container {
  padding: 28rpx 28rpx 108rpx;
  box-sizing: border-box;
}

.container .car_box .item_box {
  box-shadow:0px 6rpx 26rpx 0px rgba(0, 0, 0, 0.1);
  border-radius:10rpx;
  padding: 32rpx 0;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.container .car_box .item_box .title_box {
  height: 32rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.container .car_box .item_box .title_box image {
  height: 32rpx;
  width: 32rpx;
  border-right: 20rpx solid transparent;
}

.container .car_box .item_box .title_box view {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .car_box .item_box .product_box {
  padding: 32rpx 0;
  margin: 0 24rpx;
  box-sizing: border-box;
}

.container .car_box .item_box .product_box .goodsbox {
  border-bottom: 2rpx solid #EEEEEE;
  display: flex;
  align-items: center;
}

.container .car_box .item_box .product_box .goodsbox:last-child {
  border: none;
}

.container .car_box .item_box .product_box .selectImg {
  height: 100%;
  display: flex;
  align-items: center;
}

.container .car_box .item_box .product_box .selectImg image {
  height: 32rpx;
  width: 32rpx;
  margin: 0 20rpx;
}

.container .car_box .item_box .product_box .cont_box {
  display: flex;
  overflow: hidden;
  flex: 1;
}

.container .car_box .item_box .product_box .cont_box .l_img {
  margin-right: 20rpx;
}

.container .car_box .item_box .product_box .cont_box .l_img image {
  height: 136rpx;
  width: 136rpx;
  border-radius: 10rpx;
}

.container .car_box .item_box .product_box .cont_box .r_box {
  flex: 1;
  overflow: hidden;
  display: flex;
}

.container .car_box .item_box .product_box .cont_box .r_box .txt_box {
  flex: 1;
  overflow: hidden;
}

.container .car_box .item_box .product_box .cont_box .r_box .txt_box .name {
  height: 32rpx;
  line-height: 32rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .car_box .item_box .product_box .cont_box .r_box .txt_box .num {
  height: 20rpx;
  line-height: 20rpx;
  margin-top: 50rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .car_box .item_box .product_box .cont_box .r_box .money_box {
  display: inline-flex;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-right: 8rpx;
}

.container .car_box .item_box .product_box .cont_box .r_box .money_box .newMoney {
  height: 26rpx;
  line-height: 26rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:800;
  color:rgba(255,51,51,1);
}

.container .car_box .item_box .product_box .cont_box .r_box .money_box .oldMoney {
  height: 16rpx;
  line-height: 16rpx;
  margin-top: 12rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  text-decoration:line-through;
  color:rgba(153,153,153,1);
}

.container .car_box .item_box .bot_box {
  border-top: 2rpx solid #EEEEEE;
  padding: 0 32rpx 0 44rpx;
  box-sizing: border-box;
}

.container .car_box .item_box .bot_box .item_txt {
  height: 24rpx;
  display: flex;
  padding: 28rpx 0 14rpx;
}

.container .car_box .item_box .bot_box .item_txt .l_name {
  height: 24rpx;
  line-height: 24rpx;
  width: 160rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(15,5,11,1);
}

.container .car_box .item_box .bot_box .item_txt .r_txt {
  flex: 1;
  overflow: hidden;
  display: flex;
  justify-content: flex-end;
  height: 20rpx;
}

.container .car_box .item_box .bot_box .item_txt .r_txt .oldMoney{
  height: 16rpx;
  line-height: 16rpx;
  margin-top: 4rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  text-decoration:line-through;
  color:rgba(153,153,153,1);
}

.container .car_box .item_box .bot_box .item_txt .r_txt .newMoney{
  height: 20rpx;
  line-height: 20rpx;
  margin-left: 32rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(15,5,11,1);
}

.container .footer_box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  display: flex;
  border-top: 2rpx solid #EEEEEE;
}

.container .footer_box .l_box {
  display: inline-flex;
  height: 100%;
  align-items: center;
  padding-left: 28rpx;
}

.container .footer_box .l_box .select_box {
  height: 100%;
  display: inline-flex;
  align-items: center;
}

.container .footer_box .l_box .select_box image{
  height: 32rpx;
  width: 32rpx;
  margin-right: 14rpx;
}

.container .footer_box .l_box .select_box view {
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .footer_box .l_box .del_box {
  height: 100%;
  display: flex;
  align-items: center;
}

.container .footer_box .l_box .del_box view {
  margin-left: 14rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#FF3333;
}

.container .footer_box .c_box {
  flex: 1;
  overflow: hidden;
  padding-right: 28rpx;
}

.container .footer_box .c_box .first {
  height: 26rpx;
  display: flex;
  margin-top: 24rpx;
  justify-content: flex-end;
}

.container .footer_box .c_box .first>view:first-child {
  height: 24rpx;
  line-height: 24rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-top: 2rpx;
}

.container .footer_box .c_box .first>view:nth-child(2) {
  height: 26rpx;
  line-height: 26rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,51,0,1);
}

.container .footer_box .c_box .second {
  height: 24rpx;
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.container .footer_box .c_box .second>view {
  height: 24rpx;
  line-height: 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .footer_box .r_box {
  height: 100%;
  line-height: 108rpx;
  background: #31CC90;
  width: 260rpx;
  text-align: center;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
}








