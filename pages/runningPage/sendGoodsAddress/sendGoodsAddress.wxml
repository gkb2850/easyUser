<view class="container">
  <view class="address_box">
    <view class="item_box">
      <view class="l_txt">地图位置</view>
      <view class="r_box">
        <image src="../../../assets/images/running_address_icon.png" class="address_icon"></image>
      </view>
    </view>
    <view class="item_box">
      <view class="l_txt">所属区域</view>
      <view class="r_box">
        <view class="r_txt">请选择</view>
        <image src="../../../assets/images/torighth_icon.png" class="right_icon"></image>
      </view>
    </view>
    <view class="item_box">
      <view class="l_txt">详细地址</view>
      <view class="r_box">
        <input placeholder="请输入详细地址" placeholder-class="inputPlace"></input>
      </view>
    </view>
    <view class="item_box">
      <view class="l_txt">收货人姓名</view>
      <view class="rs_box">
        <input placeholder="请输入发货人姓名" placeholder-class="inputPlace"></input>
        <view class="radio_box">
          <view class="btn">
           <label class="radio">
             <radio value="r2" color="#31CC90" />男
           </label>
           <label class="radio">
             <radio value="r2" color="#31CC90" />女
           </label>
          </view>
        </view>
      </view>
    </view>
    <view class="item_box">
      <view class="l_txt">收货人电话</view>
      <view class="r_box">
        <v-phone></v-phone>
        <input placeholder="请输入详细地址" placeholder-class="inputPlace"></input>
      </view>
    </view>
  </view>
  <view class="bot_btn_box">确定</view>
</view>