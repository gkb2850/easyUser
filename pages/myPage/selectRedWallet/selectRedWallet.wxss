.container {
  padding: 0 28rpx;
  box-sizing: border-box;
}

.container .top_box {
  padding-top: 15rpx;
}

.container .top_box .title_box {
  height: 60rpx;
  display: flex;
}

.container .top_box .title_box>view {
  flex: 1;
  text-align: center;
  height: 100%;
  line-height: 60rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.container .top_box .title_box>view:first-child {
  padding-right: 46rpx;
  padding-left: 52rpx;
  flex: none;
}

.container .top_box .cont_box {
  border-bottom: 2rpx solid #EEEEEE;
}

.container .top_box .cont_box .item_box {
  display: flex;
  height: 86rpx;
  align-items: center;
}

.container .top_box .cont_box .item_box .select_icon {
  height: 32rpx;
  width: 32rpx;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-right: 20rpx solid transparent;
}

.container .top_box .cont_box .item_box>view {
  flex: 1;
  height: 24rpx;
  line-height: 24rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.container .turntable_box {
  margin-top: 50rpx;
}

.container .turntable_box .title_box {
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .turntable_box .title_box .txt {
  height: 20rpx;
  line-height: 20rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  margin: 0 24rpx;
}

.container .turntable_box .title_box .line {
  height: 2rpx;
  width: 148rpx;
  background: #EEEEEE;
}

.container .turntable_box .cont_zp {
  margin: 60rpx 32rpx;
}

.container .turntable_box .cont_zp .img_box {
  height: 628rpx;
  position: relative;
}

.container .turntable_box .cont_zp .img_box .img {
  height: 100%;
  width: 100%;
  display: block;
  box-shadow:0px 11rpx 18rpx 0px rgba(1,20,73,0.61);
  border-radius:50%;
}

.container .turntable_box .cont_zp .img_box .btn {
  position: absolute;
  left: 50%;
  top: 50%;
  height: 60rpx;
  width: 200rpx;
  text-align: center;
  transform: translate(-50%, -50%);
  background: #31CC90;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color: #fff;
  line-height: 60rpx;
  border-radius: 10rpx;
}



