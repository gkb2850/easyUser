<view class="container">
  <view class="editaddress_box">
    <view class="item_box">
      <view class="item_name">收货人：</view>
      <view class="item_right">
        <input type="text" placeholder="请输入收货人姓名" placeholder-class="inputplace"></input>
      </view>
    </view>
    <view class="item_box">
      <view class="item_name">手机号：</view>
      <view class="item_right">
        <view class="sel_phone">
          <v-phone></v-phone>
        </view>
        <input type="number" placeholder="请输入手机号码" placeholder-class="inputplace"></input>
      </view>
    </view>
    <view class="item_box">
      <view class="item_name">所在地区：</view>
      <view class="item_right">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}" class="pickerAddress">
          <view class="picker">{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
        </picker>
        <image class="rightImg" src="../../../assets/images/rightbtn_iocn.png"></image>
      </view>
    </view>
    <view class="item_box">
      <view class="item_name">详细地址：</view>
      <view class="item_right">
        <input type="text" placeholder="街道门牌信息"></input>
      </view>
    </view>
    <view class="item_box">
      <view class="item_name">标签：</view>
      <view class="item_right">
        <view class="label_box">
          <view>家</view>
          <view>单位</view>
          <view>学校</view>
          <view>其他</view>
        </view>
      </view>
    </view>
    <view class="item_box">
      <view class="item_name">设为默认地址：</view>
      <view class="item_right">
        <switch class="switchbtn"  color="#31CC90" checked="{{switch1Checked}}" bindchange="switch1Change"/>
      </view>
    </view>
  </view>
  <view class="address_btn">
    <view class="keep">保存地址</view>
    <view class="del">删除地址</view>
  </view>
</view>